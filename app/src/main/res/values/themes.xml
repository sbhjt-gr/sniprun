        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryVariant">@color/ide_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/run_button_color</item>
        <item name="colorSecondaryVariant">@color/new_file_button_color</item>
        <item name="colorOnSecondary">@color/white</item>
